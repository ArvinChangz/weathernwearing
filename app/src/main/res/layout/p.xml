<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/person_border"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:background="@drawable/photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"/>
    <ImageView
        android:id="@+id/person"
        android:layout_width="325dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="@id/person_border"
        app:layout_constraintEnd_toEndOf="@id/person_border"
        app:layout_constraintStart_toStartOf="@id/person_border"
        app:layout_constraintTop_toTopOf="@id/person_border"
        app:layout_constraintVertical_bias="0.43"
        app:srcCompat="@drawable/p" />

    <TextView
        android:id="@+id/m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男生:"
        android:textSize="15sp"
        android:textColor="#696969"
        app:layout_constraintTop_toBottomOf="@id/person"
        app:layout_constraintBottom_toBottomOf="@id/person_border"
        app:layout_constraintEnd_toEndOf="@id/person_border"
        app:layout_constraintStart_toStartOf="@id/person_border"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.06"/>
    <TextView
        android:id="@+id/ma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 短袖襯衫"
        android:textSize="15sp"
        android:onClick="non"
        android:textColor="#696969"
        app:layout_constraintTop_toTopOf="@id/m"
        app:layout_constraintBottom_toBottomOf="@id/person_border"
        app:layout_constraintEnd_toEndOf="@id/person_border"
        app:layout_constraintStart_toEndOf="@id/m"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/mb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 短褲"
        android:textSize="15sp"
        android:onClick="pm2"
        android:textColor="#696969"
        app:layout_constraintTop_toTopOf="@id/m"
        app:layout_constraintBottom_toBottomOf="@id/person_border"
        app:layout_constraintEnd_toEndOf="@id/person_border"
        app:layout_constraintStart_toEndOf="@id/ma"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="女生:"
        android:textSize="15sp"
        android:textColor="#696969"
        app:layout_constraintTop_toBottomOf="@id/m"
        app:layout_constraintBottom_toBottomOf="@id/person_border"
        app:layout_constraintEnd_toEndOf="@id/person_border"
        app:layout_constraintStart_toStartOf="@+id/m"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/wa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 無袖上衣"
        android:textSize="15sp"
        android:onClick="pw1"
        android:textColor="#696969"
        app:layout_constraintTop_toBottomOf="@id/m"
        app:layout_constraintBottom_toBottomOf="@id/person_border"
        app:layout_constraintEnd_toEndOf="@id/person_border"
        app:layout_constraintStart_toEndOf="@+id/w"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/wb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 牛仔短褲"
        android:textSize="15sp"
        android:onClick="pw2"
        android:textColor="#696969"
        app:layout_constraintTop_toBottomOf="@id/m"
        app:layout_constraintBottom_toBottomOf="@id/person_border"
        app:layout_constraintEnd_toEndOf="@id/person_border"
        app:layout_constraintStart_toEndOf="@+id/wa"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>