<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">


    <fragment
        android:id="@+id/navigation_weathermap"
        android:name="com.example.weather_wearing.ui.map.MapFragment"
        android:label="@string/title_weathermap"
        tools:layout="@layout/fragment_weathermap" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.weather_wearing.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_weatherdetail"
        android:name="com.example.weather_wearing.ui.detail.DetailFragment"
        android:label="@string/title_weatherdetail"
        tools:layout="@layout/fragment_weatherdetail"/>
</navigation>